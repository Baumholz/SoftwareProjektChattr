<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <!--android:background="@color/white">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/rowManually"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.25">

            <Button
                android:id="@+id/manuallButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_secondary"
                android:gravity="center"
                android:text="Add contact manually"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/rowNfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:layout_weight="0.25">

            <Button
                android:id="@+id/nfcButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_secondary"
                android:gravity="center"
                android:text="Add contact with NFC"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/rowNewQr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.25">

            <Button
                android:id="@+id/qrButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_secondary"
                android:gravity="center"
                android:text="Add contact with QR"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:id="@+id/rowShowQr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25">

            <Button
                android:id="@+id/showQrButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_secondary"
                android:gravity="center"
                android:text="Display Your QR"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </TableRow>
    </LinearLayout>
</RelativeLayout>